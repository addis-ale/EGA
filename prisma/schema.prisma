generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
    name String
    email String @unique
    emailVerfied DateTime?
    password String
    image String?
    role UserRoll  @default(USER)
    review Review[]
    cart Cart[]
    order Order[]
    wishlist Wishlist[]
    search SearchHistory[]
    accounts  Account[]
    sessions  Session[]
     Authenticator Authenticator[]
     rental Rental[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
enum UserRoll {
   ADMIN
  USER
}


model Product {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  productName  String  
  gameType   GameType 
  uploadedCoverImage  String?
  uploadedVideo  String?
  discountPercentage  Int
  priceDetails        PriceDetails?
   availableForSale    Int?   @default(0)    
  availableForRent    Int?    @default(0)
    productDescription String
  ageRestriction  String
    views            Int      @default(0) 
  salesCount       Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  availableProduct Available[]
  rental Rental[]
  review  Review[]
  Wishlist WishlistOnProduct[]
  productType        ProductType    @default(SALE)


  CartItem CartItem[]

  OrderItem OrderItem[]

}
model PriceDetails {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  productId           String   @unique @db.ObjectId
  salePrice           Float?   // Sale price (if applicable)
  rentalPricePerHour  Float?   // Rental price per hour (if applicable)
  minimumRentalPeriod Int?     // Minimum rental period in hours/days
  maximumRentalPeriod Int?     // Maximum rental period in hours/days

  product            Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}
